<Window x:Class="WPF_Test.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml" 
        Height="350" Width="525" ResizeMode="NoResize" AllowsTransparency="True" WindowStyle="None">
    <Grid Background="White" MouseDown="window_onMouseDown" >
        <Border x:Name="border" BorderThickness="2,3,2,1" >
            <Border.BorderBrush>
                <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
                    <GradientStop Color="Black" Offset="0"/>
                    <GradientStop Color="White" Offset="1"/>
                </LinearGradientBrush>
            </Border.BorderBrush>
        </Border>
        <TextBlock x:Name="title" VerticalAlignment="Top" HorizontalAlignment="Stretch" 
                   Margin="5" Text="WPF Skin Test" TextAlignment="Center" />
        <Button x:Name="closeButton" VerticalAlignment="Top" HorizontalAlignment="Right" Width="25" 
                Height="25" Margin="5" Background="{x:Null}" BorderBrush="{x:Null}" Foreground="Black" 
                Content="X"/>
    </Grid>
</Window>
